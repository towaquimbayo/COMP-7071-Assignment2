@model IEnumerable<_7071Sprint1Demo.Models.Payroll>

@{
    ViewData["Title"] = "Payroll";
    int count = Model.Count();
}

<div style="margin-top:7rem; min-height:80vh;">
    <div class="d-flex justify-content-between mb-4">
        <div class="d-flex gap-4">
            <h1>Payroll</h1>
            <div class="px-4 py-2 bg-primary bg-opacity-10 justify-content-center align-content-center" style="border-radius: 1rem;">
				<h3 class="fw-normal mb-0 text-primary">@count</h3>
            </div>
        </div>
        <a asp-action="Create"
            class="btn btn-primary px-3 py-2"
            style="height:fit-content;font-size:1.1rem;border-radius:0.5rem;"
        >Create New</a>
    </div>

    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Employee</th>
                    <th>Pay Date</th>
                    <th>Base Pay</th>
                    <th>Deductions</th>
                    <th>Overtime Pay</th>
                    <th>Tax Rate</th>
                    <th>Net Pay</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee != null ? item.Employee.Name : "N/A")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PayDate.ToString("yyyy-MM-dd"))
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.BasePay)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.Deductions)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.OvertimePay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaxRate) * 100%
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.NetPay)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-decoration-none">
                            <i class="bi bi-pencil"></i> Edit
                        </a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">
                            <i class="bi bi-eye"></i> Details
                        </a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-decoration-none" style="color:#eb1c1c;">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
	}
	else
	{
        <p class="text-muted">Hmm ... no results found. Please create a new Payroll to get started.</p>
	}
</div>