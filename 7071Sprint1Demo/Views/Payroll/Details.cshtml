@model _7071Sprint1Demo.Models.Payroll

@{
    ViewData["Title"] = "Payroll Details";
}

<div style="margin-top:7rem; min-height:80vh;">
    <a asp-action="Index" class="text-decoration-none" style="color:#3d5cd7;font-weight:500;">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
    <h2 class="mt-2 mb-4">Payroll Details</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class="col-sm-10">
			@(Model.Employee != null ? Model.Employee.Name : "N/A")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PayDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PayDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BasePay)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.BasePay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Deductions)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Deductions)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OvertimePay)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.OvertimePay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaxRate)
        </dt>
        <dd class="col-sm-10">
            @Model.TaxRate
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NetPay)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.NetPay)
        </dd>
    </dl>
</div>