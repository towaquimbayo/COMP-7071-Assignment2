@model IEnumerable<_7071Sprint1Demo.Models.Invoice>

@{
    ViewData["Title"] = "Invoices";
	int count = Model.Count();
}

<div style="margin-top:7rem; min-height:80vh;">
    <div class="d-flex justify-content-between mb-4">
        <div class="d-flex gap-4">
            <h1>Invoices</h1>
            <div class="px-4 py-2 bg-primary bg-opacity-10 justify-content-center align-content-center" style="border-radius: 1rem;">
                <h3 class="fw-normal mb-0 text-primary">@count</h3>
            </div>
        </div>
        <a asp-action="Create"
           class="btn btn-primary px-3 py-2"
           style="height:fit-content;font-size:1.1rem;border-radius:0.5rem;">Create New</a>
    </div>

    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Client</th>
                    <th>Issue Date</th>
                    <th>Total Amount</th>
                    <th>Is Paid</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Client != null ? item.Client.Name : "N/A")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IssueDate.ToString("yyyy-MM-dd"))
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.TotalAmount)
                        </td>
                        <td>
                            @(item.IsPaid ? "Yes" : "No")
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-decoration-none">
                                <i class="bi bi-pencil"></i> Edit
                            </a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">
                                <i class="bi bi-eye"></i> Details
                            </a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-decoration-none" style="color:#eb1c1c;">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">Hmm ... no results found. Please create a new Invoice to get started.</p>
    }
</div>