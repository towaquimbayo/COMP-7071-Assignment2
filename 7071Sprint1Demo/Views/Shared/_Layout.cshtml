<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - COMP 7071</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_7071Sprint1Demo.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow px-xl-5 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand fs-4" asp-area="" asp-controller="Home" asp-action="Index">COMP 7071</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 gap-3 justify-content-end">
                        <li class="nav-item">
                            <a
                                class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "navlink-active" : "text-dark")"
                                asp-area=""
                                asp-controller="Home"
                                asp-action="Index">
                                    Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a
                                class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Clients" ? "navlink-active" : "text-dark")"
                                asp-area=""
                                asp-controller="Clients"
                                asp-action="Index">
                                    Clients
                            </a>
                        </li>
                        <li class="nav-item">
                            <a
                                class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Employees" ? "navlink-active" : "text-dark")"
                                asp-area=""
                                asp-controller="Employees" 
                                asp-action="Index">
                                    Employees
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Renters" asp-action="Index">Renters</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Services" asp-action="Index">Services</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container align-items-center text-center pt-3">
            BCIT 2025 &copy; COMP 7071 - Group 3
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
