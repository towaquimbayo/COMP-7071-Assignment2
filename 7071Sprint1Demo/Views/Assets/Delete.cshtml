@model _7071Sprint1Demo.Models.Asset

@{
    ViewData["Title"] = "Delete Asset";
}

<div style="margin-top:7rem; min-height:80vh;">
    <a asp-action="Index" class="text-decoration-none" style="color:#3d5cd7;font-weight:500;">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
    <h2 class="mt-2 mb-4">Delete this Asset?</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            Rent Amount
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RentAmount)
        </dd>
        <dt class="col-sm-2">
            Is Occupied
        </dt>
        <dd class="col-sm-10">
            @(Model.IsOccupied ? "Yes" : "No")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm Delete" class="btn btn-danger" />
    </form>
</div>