@model IEnumerable<_7071Sprint1Demo.Models.Applicant>

@{
    ViewData["Title"] = "Hiring Applicants";
	int count = Model.Count();
}

<div style="margin-top:7rem; min-height:80vh;">
    <div class="d-flex justify-content-between mb-4">
        <div class="d-flex gap-3 align-items-center">
            <h2 class="mb-0">Hiring Applicants</h2>
            <div class="px-4 py-1 bg-primary bg-opacity-10 justify-content-center align-content-center" style="border-radius: 1rem;">
                <h4 class="fw-normal mb-0 text-primary">@count</h4>
            </div>
        </div>
        <a asp-action="Create" class="btn btn-primary px-3 py-2" style="height:fit-content;font-size:1.1rem;border-radius:0.5rem;">Create New</a>
    </div>

    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Emergency Contact</th>
                    <th>Application Status</th>
                    <th>Date Applied</th>
                    <th>Position Applied</th>
                    <th>Resume</th>
                    <th>Preferred Unit Type</th>
                    <th>Income Verification</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmergencyContact)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateApplied.ToString("yyyy-MM-dd"))
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicantType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PositionAppliedFor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Resume)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PreferredUnitType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IncomeVerification)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-decoration-none">
                                <i class="bi bi-pencil"></i> Edit
                            </a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">
                                <i class="bi bi-eye"></i> Details
                            </a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-decoration-none" style="color:#eb1c1c;">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">Hmm ... no results found. Please create a new Hiring Applicant to get started.</p>
    }
</div>
