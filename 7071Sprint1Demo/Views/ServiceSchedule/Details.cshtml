@model _7071Sprint1Demo.Models.ServiceBooking

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ServiceBooking</h4>
    <hr />
    <dl class="row">
        <!-- Display the assigned Employee (assumes a single assignment) -->
        <dt class="col-sm-2">
            Employee
        </dt>
        <dd class="col-sm-10">
            @(Model.AssignedEmployees != null && Model.AssignedEmployees.Any() ? Model.AssignedEmployees.First().Name : "N/A")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduledDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduledDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

