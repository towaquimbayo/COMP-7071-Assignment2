    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ServiceBooking</h4>
    <hr />
    <dl class="row">
        <!-- Display the assigned Employee -->
        <dt class="col-sm-2">
            Employee
        </dt>
        <dd class="col-sm-10">
            @(Model.AssignedEmployees != null && Model.AssignedEmployees.Any() ? Model.AssignedEmployees.First().Name : "N/A")
