@model _7071Sprint1Demo.Models.ServiceBooking

@{
    ViewData["Title"] = "Create Service Booking";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Service</label>
                <select name="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>

            <div class="form-group">
                <label class="control-label">Employee</label>
                <select name="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>

            <div class="form-group">
                <label asp-for="ScheduledDate" class="control-label"></label>
                <input name="ScheduledDate" type="datetime-local" class="form-control" value="@(Model?.ScheduledDate.HasValue == true ? Model.ScheduledDate.Value.ToString("yyyy-MM-ddTHH:mm") : "")" />
                <span asp-validation-for="ScheduledDate" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 20px;">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}