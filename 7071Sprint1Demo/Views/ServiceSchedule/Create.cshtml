@model _7071Sprint1Demo.Models.ServiceBooking

@{
    ViewData["Title"] = "Create Service Schedule";
}

<div style="margin-top:7rem; min-height:80vh;">
    <a asp-action="Index" class="text-decoration-none" style="color:#3d5cd7;font-weight:500;">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
    <h2 class="mt-2 mb-4">Create New Service Schedule</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label class="control-label">Employee ID</label>
                    <select name="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                </div>

                <div class="form-group">
                    <label class="control-label">Service ID</label>
                    <select name="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                </div>

                <div class="form-group">
                    <label asp-for="ScheduledDate" class="control-label">Scheduled Date</label>
                    <input asp-for="ScheduledDate" type="datetime-local" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                    <span asp-validation-for="ScheduledDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}