@model IEnumerable<_7071Sprint1Demo.Models.RentInvoice>

@{
    ViewData["Title"] = "Rent Invoices";
}

<h1>Rent Invoices</h1>

<p>
    <a class="btn btn-default" href="@Url.Action("Create")">Generate New Invoice</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Asset</th>
            <th>Renter</th>
            <th>Issue Date</th>
            <th>Due Date</th>
            <th>Amount Due</th>
            <th>Is Paid</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.Asset.Type</td>
                <td>@invoice.Renter.Name</td>
                <td>@invoice.IssueDate.ToString("yyyy-MM-dd")</td>
                <td>@invoice.DueDate.ToString("yyyy-MM-dd")</td>
                <td>@invoice.AmountDue.ToString("C")</td>
                <td>@(invoice.IsPaid ? "Yes" : "No")</td>
                <td>
                    <!-- Detail Link -->
                    <a href="@Url.Action("Details", "RentInvoice", new { id = invoice.Id })">Detail</a>

                    <!-- Edit Link -->
                    <a href="@Url.Action("Edit", "RentInvoice", new { id = invoice.Id })">Edit</a>

                    <!-- Delete Link (with confirmation) -->
                    <a href="@Url.Action("Delete", "RentInvoice", new { id = invoice.Id })"
                       onclick="return confirm('Are you sure you want to delete this invoice?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
