@model _7071Sprint1Demo.Models.RentHistory

@{
    ViewData["Title"] = "Create Rent History";
}

<div style="margin-top:7rem; min-height:80vh;">
    <a asp-action="Index" class="text-decoration-none" style="color:#3d5cd7;font-weight:500;">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
    <h2 class="mt-2 mb-4">Create New Rent History</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="AssetId" class="control-label">Asset Type</label>
                    <select asp-for="AssetId" class="form-control" asp-items="ViewBag.AssetList"></select>
                    <span asp-validation-for="AssetId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RenterId" class="control-label">Renter Name</label>
                    <select asp-for="RenterId" class="form-control" asp-items="ViewBag.RenterList"></select>
                    <span asp-validation-for="RenterId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="OldRentAmount" class="control-label">Old Rent Amount</label>
                    <input asp-for="OldRentAmount" class="form-control" />
                    <span asp-validation-for="OldRentAmount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewRentAmount" class="control-label">New Rent Amount</label>
                    <input asp-for="NewRentAmount" class="form-control" />
                    <span asp-validation-for="NewRentAmount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EffectiveDate" class="control-label">Effective Date</label>
                    <input asp-for="EffectiveDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="EffectiveDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-warning">@ViewBag.Message</div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
