  @model _7071Sprint1Demo.Models.OccupancyHistory

  @{
      ViewData["Title"] = "Occupancy History Details";
  }

  <h1>@ViewData["Title"]</h1>

  <div>
      <h3>Asset Type:</h3>
      <p>@Model.Asset?.Type</p>
  </div>
  <div>
      <h3>Renter Name:</h3>
      <p>@Model.Renter?.Name</p>
  </div>
  <div>
      <h3>Start Date:</h3>
      <p>@Model.StartDate.ToShortDateString()</p>
  </div>
  <div>
      <h3>End Date:</h3>
      <p>@Model.EndDate?.ToShortDateString() ?? "N/A"</p>
  </div>
  <div>
      <h3>Duration:</h3>
      <p>@(Model.EndDate.HasValue ? (Model.EndDate.Value - Model.StartDate).Days.ToString() + " days" : "Ongoing")</p>
  </div>
  <div>
      <a href="@Url.Action("Index", "OccupancyHistory")">Back to List</a>
  </div>
