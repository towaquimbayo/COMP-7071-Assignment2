@model _7071Sprint1Demo.Models.OccupancyHistory

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Dropdown for Asset -->
    <div class="form-group">
        <label asp-for="AssetId">Asset Type</label>
        <select asp-for="AssetId" class="form-control" asp-items="ViewBag.AssetList">
            <option value="">-- Select Asset --</option>
        </select>
        <span asp-validation-for="AssetId" class="text-danger"></span>
    </div>

    <!-- Dropdown for Renter -->
    <div class="form-group">
        <label asp-for="RenterId">Renter Name</label>
        <select asp-for="RenterId" class="form-control" asp-items="ViewBag.RenterList">
            <option value="">-- Select Renter --</option>
        </select>
        <span asp-validation-for="RenterId" class="text-danger"></span>
    </div>

    <!-- Start Date -->
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <!-- End Date -->
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
