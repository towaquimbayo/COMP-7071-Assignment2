@model _7071Sprint1Demo.Models.ServiceBooking

@{
    ViewData["Title"] = "Service Booking Details";
}

<div style="margin-top:7rem; min-height:80vh;">
    <a asp-action="Index" class="text-decoration-none" style="color:#3d5cd7;font-weight:500;">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
    <h2 class="mt-2 mb-4">Service Booking Details</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class="col-sm-10">
			@(Model.Client != null ? Model.Client.Name : "N/A")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Name)
        </dd>
        <dt class="col-sm-2">
            Scheduled Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduledDate)
        </dd>
    </dl>
</div>