@model _7071Sprint1Demo.Models.ServiceBooking

@{

    ViewData
[
"Title"
]
 
=
 
"Create"
;

}


<h1>Create</h1>

<h4>Service Booking</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-controller="ServiceBookings" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <!-- Important: Add this line for anti-forgery token -->
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                <label asp-for="ClientId" class="control-label">ClientId</label>
                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label">ServiceId</label>
                <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ScheduledDate" class="control-label">ScheduledDate</label>
                <input asp-for="ScheduledDate" class="form-control" />
                <span asp-validation-for="ScheduledDate" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    
@{
await
 Html
.
RenderPartialAsync
(
"_ValidationScriptsPartial"
)
;
}

}